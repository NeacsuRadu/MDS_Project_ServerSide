 <!DOCTYPE html>
<html>
<head>
<title>	<% if (name.length > 0) { %>
		<%= name %>
	<% } %>'s  home page </title>
</head>

<link rel="stylesheet"
href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u"
crossorigin="anonymous">

<style>

#mesaje{
  height: 500px;
}
#prieteni{
  overflow-y: scroll;
  height: 450px;
}
#tts{
  width: 85%;
  display: inline;
}

#send{
  width: 10%;
  margin-left: 3%
}
.lm{
  height: 480px;
  overflow-y: scroll;
}

#nume{
  height: 4em;
}

.msgr{
  float:right;
}

.msg{
  width: 50%;
}


</style>


<body>

<p>
welcome ,
<b id= "user"><% if (name.length > 0) { %><%= name%><% } %></b>!

</p>



<div id = "container">
  <div class = "col-md-6">

    <div class="panel panel-primary" id = "Chat">
      <div class="panel-heading" id = "nume"></div>
      <div class="panel-body" id = "mesaje">
        <ul class="list-unstyled lm">
        </ul>
      </div>
      <div class="panel-footer" id = "input">
        <input type="text" id ="tts" class="form-control"/>
        <button id="send" class="btn btn-info">Send</button>

      </div>
    </div>
  </div>

  <div class = "col-md-6">

    <div class="input-group">
      <input type="text" class="form-control searchf" placeholder="Search for an user...">
      <span class="input-group-btn">
        <button class="btn btn-secondary searchb" type="button">Go!</button>
      </span>
    </div>
    <br>

    <ul class="list-group lp">
    </ul>

	   <a href='logout'>Log Out! </a>
  </div>

</div>
</body>
<script src="/socket.io/socket.io.js"></script>
<script src="https://code.jquery.com/jquery-1.11.1.js"></script>
<script>
$(function () {
    var socket = io();

    var messagesWith = {};

    var user = $('#user').html();
    var userImage ;

    var friends = {};

    $.get('/friends',function(data){
      var fr = data;

      for(var i in fr){
        var li = makeLI(i,fr[i]);
        $('.lp').append(li);
      }


      var src = user;
      var userImg = document.createElement('img');
      if(src != undefined){
        userImg.src = '/pictures/' +src+".png";
        userImg.width = 30;
        userImg.height = 30;
      }

    });


    socket.on("friend connected",function(friend){
      console.log(friend + "s a conectat");
    });


    socket.on("friend disconnected",function(friend){
      console.log(friend + "s a deconectat");
    });


    socket.on("chat message", function(msg){

      $('.lm').append('<li>' +
                          '<div class="media">' +
                          '  <div class="media-left media-top"> ' +
                          '    <img width="30" height="30" src=' + "/pictures/" + msg.from  + ".png"+ ' class="media-object"> ' +
                          '  </div> ' +
                          '  <div class="media-body"> ' +
                          '    <p class="msg">' + msg.message +'</p> ' +
                          '  </div> ' +
                          '</div> ' +
                        '</li>');
    });

    var selectedFriend;
    var selectedFriendIndex = -1;


    $('#send').click(function(){
      console.log($("#tts").val().length);
      if($('#tts').val().length == 0 || selectedFriend == undefined){
        return;
      }else{

        $('.lm').append('<li>' +
                            '<div class="media">' +
                            '  <div class="media-body"> ' +
                            '    <p class="msgr msg">' + $("#tts").val() +'</p> ' +
                            '  </div> ' +
                            '  <div class="media-right media-top"> ' +
                            '    <img width="30" height="30" src= ' + "/pictures/" + user + ".png" + ' class="media-object" > ' +
                            '  </div> ' +
                            '</div> ' +
                          '</li>');
        socket.emit("chat message", {to : $('#nume').text(),
                                     from : user,
                                     message : $('#tts').val(),
                                     date : new Date()});
        $("#tts").val("");
      }
    });

    $('.lp').on("click",'.pb',function (){


        var clicked = $(this);
        var nume = $('#nume');
        nume.html(clicked.html());

        $(".lm").empty();

        if(messagesWith[clicked.html()] == undefined){
          $.get('/messages/'+clicked.text(),function(data){
            messagesWith[clicked.text()] = data;
            console.log(data);

            for(var i = 0; i < data.length; i++){
              if(data[i].from == user){
                $('.lm').append('<li>' +
                                    '<div class="media">' +
                                    '  <div class="media-body"> ' +
                                    '    <p class="msgr msg">' + data[i].message +'</p> ' +
                                    '  </div> ' +
                                    '  <div class="media-right media-top"> ' +
                                    '    <img width="30" height="30" src=' + "/pictures/" + data[i].from + ".png" +' class="media-object" > ' +
                                    '  </div> ' +
                                    '</div> ' +
                                  '</li>');
              }else{
                $('.lm').append('<li>' +
                                    '<div class="media">' +
                                    '  <div class="media-left media-top"> ' +
                                    '    <img width="30" height="30" src='+ "/pictures/" + data[i].from + ".png" +' class="media-object"> ' +
                                    '  </div> ' +
                                    '  <div class="media-body"> ' +
                                    '    <p class="msg">' + data[i].message +'</p> ' +
                                    '  </div> ' +
                                    '</div> ' +
                                  '</li>');
              }
            }
          });
        }else{
          var data = messagesWith[clicked.html()];
          for(var i = 0; i < data.length; i++){
            if(data[i].from == user){
              $('.lm').append('<li>' +
                                  '<div class="media">' +
                                  '  <div class="media-body"> ' +
                                  '    <p class="msgr msg">' + data[i].message +'</p> ' +
                                  '  </div> ' +
                                  '  <div class="media-right media-top"> ' +
                                  '    <img width="30" height="30" src=' + "/pictures/" + data[i].from + ".png" +' class="media-object" > ' +
                                  '  </div> ' +
                                  '</div> ' +
                                '</li>');
            }else{
              $('.lm').append('<li>' +
                                  '<div class="media">' +
                                  '  <div class="media-left media-top"> ' +
                                  '    <img width="30" height="30" src=' + "/pictures/" + data[i].from + ".png" +' class="media-object" > ' +
                                  '  </div> ' +
                                  '  <div class="media-body"> ' +
                                  '    <p class="msg">' + data[i].message +'</p> ' +
                                  '  </div> ' +
                                  '</div> ' +
                                '</li>');
            }
          }
        }

        if(selectedFriend != undefined && selectedFriendIndex == $("li.pb").index(clicked)){
          selectedFriend.removeClass('active');
          selectedFriend = undefined;
          selectedFriendIndex = -1;
          nume.html("");
          return;
        }
        clicked.addClass('active');


        if(selectedFriend == undefined){
          selectedFriend = clicked;
          selectedFriendIndex = $("li.pb").index(clicked);
        }else{
          selectedFriend.removeClass('active');
          selectedFriend = clicked;
          selectedFriendIndex = $("li.pb").index(clicked);

        }
    });

    $('.searchb').click(function(){
      var name = $('.searchf').val();
      $.get('/user/' + name, function(res){
        if(res.succ == true){
          var img = document.createElement('img');

          img.src = '/pictures/' +  name + ".png";

          img.width = 30;
          img.height = 30;
          var li = $('<li class="list-group-item pb">').append(img).append(name);
          $('.lp').append(li);
        }else{
          alert('no such user!');
        }
      });

    });


});

function makeLI(name,on){
  var imgAv = document.createElement('img');


  var logged = document.createElement('img');
  var col;

  if(on){
    col = "green";
  }else{
    col = "red";
  }


  logged.src = '/images/' + col + ".png";
  logged.height = 10;
  logged.width = 10;


  imgAv.src = '/pictures/' +  name + ".png";

  imgAv.width = 30;
  imgAv.height = 30;
  var li = $('<li class="list-group-item pb">').append(imgAv).append(name).append(logged);

  return li;
}

</script>

</html>
